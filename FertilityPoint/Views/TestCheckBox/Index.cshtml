@{
    ViewData["Title"] = "Index";

}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<link href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet">
<link href="~/booking/css/style.css" rel="stylesheet" />
<link href="~/css/appointment.css" rel="stylesheet" />


<div class="container">
    <div class="col-md-8">
        <div style="margin-bottom:20rem;margin-top:3rem;">
            <table id="tblDepartments" class="table table-striped table-bordered dt-responsive nowrap table-sm" cellspacing="0" width="100%">

                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">To Time</th>
                        <th scope="col">From Time</th>
                        <th scope="col">Entry Date</th>

                    </tr>
                </thead>

            </table>


        </div>
    </div>
</div>
<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>


<script>
    $(document).ready(function() {
        //$("#btnSubmit").click(function () {
        //    SaveDepartment();
        //});
        GetAllData();
    });

    function GetAllData() {

        var t = $('#tblDepartments').DataTable({
            "ajax": {
                "url": "/TestCheckBox/GetSlots",
                "type": "GET",
                "datatype": "json"
            },

            "columns": [

                { "data": "id" },
                { "data": "fromTime" },
                { "data": "toTime" },


                {
                    data: null,
                    mRender: function(data, type, row) {
                        return "<a href='#' class='btn-sm success' ; >Edit</a> / <a href='#' class='btn-sm danger' ; >Delete</a>";

                    }
                }

            ]
        
        });
        t.on('order.dt search.dt', function() {
            t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function(cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();

    }
</script>