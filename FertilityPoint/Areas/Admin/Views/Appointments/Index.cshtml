@model IEnumerable<FertilityPoint.DTO.AppointmentModule.AppointmentDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
<link href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" rel="stylesheet">


<body>
    <div class="page-wrapper" style="min-height: 754px;background-color: #f8f9fa;">
        <div class="content container-fluid">

            <div class="row">
                <div class="col-sm-3 col-auto">
                    <h3 class="page-title">List of Appointments</h3>
                </div>
                <div class="col-md-9">
                    <button type="button" class="btn btn-success btn-sm  pull-right" data-toggle="modal" data-target="#modalSpeciality" data-backdrop="static" data-keyboard="false"><i class="fa fa-plus-circle"></i>  </button>
                </div>
            </div>

            <div class="card">
                <div class="card-body">

                    <table id="specialist" class="table table-sm">
                        <thead>
                            <tr>
                                <th>SN.</th>
                                <th>Patient Name</th>

                                <th>Appointment Time</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model != null && Model.Count() > 0)
                            {
                                int count = 1;
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@count</td>

                                        <td>@item.FullName</td>

                                        <td>
                                            @item.AppointmentDate.ToShortDateString()
                                            <span class="text-primary d-block">@item.TimeSlot</span>
                                        </td>
                                        <td>
                                            @{
                                                var status = item.Status;

                                                if (status == 0)
                                                {
                                                    <span class="pending">Pending Approval</span>
                                                }
                                                else
                                                {
                                                    <span class="disabledUser ">Completed</span>
                                                }
                                            }
                                        </td>
                                        <td class="text-end">
                                            <a class="btn btn-success btn-sm " href="#" onclick="GetSpeciality('@item.Id')" value="">Approve</a>

                                        </td>
                                    </tr>
                                    count++;
                                }
                            }
                        </tbody>

                    </table>


                </div>
            </div>
        </div>

    </div>

    <div class="modal fade" id="modalSpeciality" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Specialities</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="frmSpeciality">
                        <div class="row form-row">
                            <div class="col-12 col-sm-12">
                                <div class="form-group">
                                    <label>Speciality Name</label>
                                    <input type="text" class="form-control" name="Name" id="txtName">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="btnSubmitSpeciality" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>


</body>

<script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script src="~/fertilitypoint/speciality.js"></script>

<style>


    .pending {
        background-color: #ffbc34;
        border-radius: 9px;
        display: block;
        height: 24px;
        margin-bottom: 0;
        position: relative;
        width: 148px;
        color: white;
        text-align: center;
    }

    .activeUser {
        background-color: #55ce63;
        border-radius: 9px;
        display: block;
        height: 24px;
        margin-bottom: 0;
        position: relative;
        width: 75px;
        color: white;
        text-align: center;
    }

    .disabledUser {
        background-color: #e0001a;
        border-radius: 9px;
        display: block;
        height: 24px;
        margin-bottom: 0;
        position: relative;
        width: 75px;
        color: white;
        text-align: center;
    }
</style>

<script type="text/javascript">
    $(document).ready(function() {
        $('#specialist').DataTable();
    });
</script>




